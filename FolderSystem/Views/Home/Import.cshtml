@model FormFile

<div class="card">
    <div class="card-header">
            <div class="card-text">
                <h3>Pattern: /Folder1/Folder2/...</h3>
            </div>
            <div class="card-text">
                text/plain
            </div>
        </div>
    <form method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input class="form-control" name="file" type="file" accept="text/plain"/>
        </div>

        <div class="card-footer">
            <div class="row">
                <button class="btn btn-success">Import</button>
            </div>
        </div>
    </form>
</div>